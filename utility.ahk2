; autohotkey v2 beta.3

Invoker(WinTitle, runCommand) {
    ; WinTitle: to match the window
    ; runCommand: command used to open app
    if (hwnd := WinExist(WinTitle)) {
        minmaxState := WinGetMinMax(hwnd)
        if (minmaxState == -1) {	; 最小化
            WinRestore(hwnd)
            WinActivate(hwnd)
        } else {	; 不是最小化
            WinMinimize(hwnd)
        }
    } else {
        Run(runCommand)
    }
}